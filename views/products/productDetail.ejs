<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head') %>
<body class="body-detail">
    <%- include('../partials/header') %>
    <section class="section-detail-box">
        <div class="section-detail">
            <div class="small-photo-box-general">
                <div class="small-photo-box"></div>
                <div class="small-photo-box"></div>
                <div class="small-photo-box"></div>
            </div>
            <div class="main-figure-box">
                <img src="/images/products/<%=product.Image[0].name%>" alt="<%=product.name%>">
            </div>
            <div class="button-box-detail">
                <div class="button-box button-detail">
                    <%for(let i = 0; i < 5; i++) {%>
                        <button class="slide-button slide-button-detail"></button>
                    <% } %>
                </div>
            </div>
            <div class="description-box-detail">
                <div class="title-off-box">
                    <h2><%=product.name%></h2>
                    <% if (product.off > 0)  {%>
                        <div class="off-box off-box-detail">
                          <p class="off-text">-<%= product.off %>%</p>
                        </div>
                    <% } %>
                </div>
                <p><%=product.description%></p>
                <div class="price-box-detail">
                    <h3>$<%=product.price%></h3>
                    <div class="selling-way">
                        <% if(product.Selling_way.id == 1) { %>
                            <p>Por Unidad</p>
                        <% } else if (product.Selling_way.id == 2) {%>
                            <p>Los 100 gramos</p>
                        <% } %>
                    </div>
                </div>
                <div class="info-text-box">
                    <button class="add-cart">Agregar al Carrito</button>
                </div>
            </div>
        </div>
        <div class="related-products">
            <h2>Productos Relacionados</h2>
        </div>
        <div class="articles-box">
            <% products.forEach((p) => {%>
              <a href="/products/detail/<%=p.id%>" class="article">
                  <figure class="img-box">
                    <img src="/images/products/<%=p.Image[0].name%>" alt="<%=p.name%>">
                  </figure>
                  <% if (p.off > 0)  {%>
                    <div class="off-box">
                      <p class="off-text">-<%= p.off %>%</p>
                    </div>
                  <% } %>
                  <article class="info-box">
                    <div class="info-text-box">
                      <h3 class="info-text">
                        <%= p.name %>
                      </h3>
                    </div>
        <!--             <div class="info-text-box">
                      <p class="info-text">
                        <%= p.description %>
                      </p>
                    </div> -->
                    <div class="info-text-box price-text-box">
                        <%if (p.Selling_way.id == 1) {%>
                          <h4 class="info-text">$<%= p.price %> </h4> <p class="info-text type"> (c/u)</p>
                        <% } else if (p.Selling_way.id == 2) {%>
                          <h4 class="info-text">$<%= p.price %> </h4> <p class="info-text type"> (x 100g)</p>
                        <% } %>      
                    </div>
                    <div class="info-text-box">
                      <button class="add-cart">Agregar al Carrito</button>
                    </div>
                  </article>
              </a>
            <%})%>
          </div>
    </section>
    <%- include('../partials/footer') %>
</body>
</html>